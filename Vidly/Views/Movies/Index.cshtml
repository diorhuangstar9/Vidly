@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count == 0)
{
    <text>No Movies.</text>
}
else
{
    <table class=“table table-bordered table-hover”>
        <thead>Movie</thead>

        @foreach (var movie in Model)
        {
            <tr><td> @movie.Name</td></tr>
        }
    </table>
}
